<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dataForm="clr-namespace:Syncfusion.XForms.DataForm;assembly=Syncfusion.SfDataForm.XForms"
             x:Class="DemoInfermieri.Views.Registrazione">
    <ContentPage.Content>
        <StackLayout>
            <dataForm:SfDataForm x:Name="dataForm" DataObject="{Binding UtenteRegistrazione}" ValidationMode="LostFocus"/>
            <Button Text="Registrati" HorizontalOptions="Center" Clicked="registrazioneEvent" ></Button>
</StackLayout>
    </ContentPage.Content>
</ContentPage>